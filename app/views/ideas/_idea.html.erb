<div class="card">

  <%= image_tag idea.picture_url(:thumb) if idea.picture.present? %>

  <div class="card-body">
    <h5 class="card-title">
      <%= idea.name %>
    </h5>

    <p class="card-text">
      <%= idea.description %>
    </p>

    <%= link_to "View", idea_path(idea.id), class: 'btn btn-primary' %>
  </div>
</div>

<br>
