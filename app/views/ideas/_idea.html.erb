<div class="card" style="width: 15rem; ">

  <%= image_tag idea.picture_url, width: '100%', height: '200' if idea.picture.present? %>

  <div class="card-body">
    <h5 class="card-title">
      <%= idea.name %>
    </h5>

    <p class="card-text">
      <%= idea.description %>
    </p>
  </div>
</div>

<br>
