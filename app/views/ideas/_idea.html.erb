<div class="card">

  <%= image_tag idea.picture_url(:thumb) if idea.picture.present? %>

  <div class="card-body">
    <h5 class="card-title">
      <%= link_to idea.name, idea_path(idea.id), class: 'text-dark' %> 
    </h5>
    
    <p class="card-text">
      <%= idea.description %> 
    </p>

  </div>
</div>

<br>
